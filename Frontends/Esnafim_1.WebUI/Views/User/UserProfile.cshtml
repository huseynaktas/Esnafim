@model GetUserDto

@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .sct {
        position: relative;
        background: transparent;
        overflow: hidden;
    }

        .sct::before {
            content: "";
            position: absolute;
            inset: 0;
            background-image: url("https://images.unsplash.com/photo-1528698827591-e19ccd7bc23d ");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.75; /* %75 opaklık */
            z-index: 0;
        }

        /* İçeriği üste alıyoruz */
        .sct > * {
            position: relative;
            z-index: 1;
        }
</style>

<section class="ftco-section sct">
    <div class="container">

        <div class="mb-4 bg-light p-4 rounded shadow-sm">
            <h3 class="mb-1">Profil Bilgilerim</h3>
            <p class="text-muted mb-0">Hesabına ait bilgileri buradan görüntüleyebilirsin.</p>
        </div>

        <div class="row">
            <!-- Kişisel Bilgiler -->
            <div class="col-lg-6 mb-4">
                <div class="bg-light p-4 rounded shadow-sm">
                    <h5 class="mb-3">Kişisel Bilgiler</h5>

                    <div class="mb-3">
                        <small class="text-muted">Ad Soyad</small>
                        <div class="font-weight-bold">@Model.Name</div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">Email</small>
                        <div class="font-weight-bold">@Model.Email</div>
                    </div>

                    <div class="mb-0">
                        <small class="text-muted">Telefon</small>
                        <div class="font-weight-bold">@Model.Phone</div>
                    </div>
                </div>
            </div>

            <!-- Adres Bilgileri -->
            <div class="col-lg-6 mb-4">
                <div class="bg-light p-4 rounded shadow-sm">
                    <h5 class="mb-3">Adres Bilgileri</h5>

                    <div class="row">
                        <div class="col-4 mb-3">
                            <small class="text-muted">İl</small>
                            <div class="font-weight-bold">@Model.City</div>
                        </div>
                        <div class="col-4 mb-3">
                            <small class="text-muted">İlçe</small>
                            <div class="font-weight-bold">@Model.District</div>
                        </div>
                        <div class="col-4 mb-3">
                            <small class="text-muted">Mahalle</small>
                            <div class="font-weight-bold">@Model.Neighborhood</div>
                        </div>
                    </div>

                    <div class="mb-0">
                        <small class="text-muted">Açık Adres</small>
                        <div class="font-weight-bold">@Model.Address</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aksiyonlar (şimdilik pasif, ileride güncelleme koyacağız) -->
        <div class="d-flex justify-content-end">
            <a href="#" class="btn btn-primary px-4 py-2 disabled">Bilgilerimi Güncelle (yakında)</a>
        </div>

    </div>
</section>