@model List<ResultFooterAddressDto>

<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2"><a href="#" class="logo">Esnaf<span>ım</span></a></h2>
                    <p>
                        İşletmeleri ve müşterileri tek yerde buluşturan randevu yönetim platformu.
                        Hızlı randevu al, işletmeni kolayca yönet.
                    </p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        <li class="ftco-animate">
                            <a href="https://twitter.com/login"><span class="icon-twitter"></span></a>
                        </li>
                        <li class="ftco-animate">
                            <a href="https://www.facebook.com/login"><span class="icon-facebook"></span></a>
                        </li>
                        <li class="ftco-animate">
                            <a href="https://www.instagram.com/accounts/login/"><span class="icon-instagram"></span></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Bilgilendirme</h2>
                    <ul class="list-unstyled">
                        <li><a href="/About/Index" class="py-2 d-block">Hakkımızda</a></li>
                        <li><a href="/Service/Index" class="py-2 d-block">Hizmetler</a></li>
                        <li><a href="/Support/Terms" class="py-2 d-block">Kullanım Şartları</a></li>
                        <li><a href="/Support/Privacy" class="py-2 d-block">Gizlilik Politikası</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Destek</h2>
                    <ul class="list-unstyled">
                        <li><a href="/Support/Faq" class="py-2 d-block">SSS</a></li>
                        <li><a href="/Contact/Index" class="py-2 d-block">İletişim</a></li>
                        <li><a href="/Support/HelpCenter" class="py-2 d-block">Yardım Merkezi</a></li>
                        <li><a href="/Support/Feedback" class="py-2 d-block">Geri Bildirim</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Have a Questions?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            @foreach (var item in Model)
                            {

                                <li><span class="icon icon-map-marker"></span><span class="text">@item.address</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@item.phoneNumber</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@item.email</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">

                <p>
                    © @DateTime.Now.Year Esnafım • Tüm hakları saklıdır.
                </p>
            </div>
        </div>
    </div>
</footer>

