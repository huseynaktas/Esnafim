}


<style>
    .sct {
        position: relative;
        background: transparent;
        overflow: hidden;
    }

        .sct::before {
            content: "";
            position: absolute;
            inset: 0;
            background-image: url("https://images.unsplash.com/photo-1528698827591-e19ccd7bc23d ");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.75; /* %75 opaklık */
            z-index: 0;
        }

        /* İçeriği üste alıyoruz */
        .sct > * {
            position: relative;
            z-index: 1;
        }
</style>

<section class="ftco-section contact-section sct">
