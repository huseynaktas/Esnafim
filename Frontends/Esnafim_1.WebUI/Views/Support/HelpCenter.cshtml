
@{
    ViewData["Title"] = "Yardım Merkezi";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<style>
    .sct {
        position: relative;
        background: transparent;
        overflow: hidden;
    }

        .sct::before {
            content: "";
            position: absolute;
            inset: 0;
            background-image: url("https://images.unsplash.com/photo-1528698827591-e19ccd7bc23d ");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            opacity: 0.75; /* %75 opaklık */
            z-index: 0;
        }

        /* İçeriği üste alıyoruz */
        .sct > * {
            position: relative;
            z-index: 1;
        }
</style>

<section class="ftco-section contact-section sct">
    <div class="container py-5 bg-light mt-4">
        <h1 class="mb-3">Yardım Merkezi</h1>
        <p class="text-muted">Hızlı çözümler ve rehberler.</p>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5>Hesap & Giriş</h5>
                        <p class="mb-0">Şifre sıfırlama, giriş sorunları, profil yönetimi.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5>Randevu İşlemleri</h5>
                        <p class="mb-0">Randevu alma, iptal/erteleme, bildirimler.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>