@{
    ViewData["Title"] = "SSS";
    Layout = "~/Areas/BusinessOwner/Views/BusinessOwnerLayout/Index.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-3">Sık Sorulan Sorular</h3>

            <div id="ownerFaq">
                <!-- Q1 -->
                <div class="card">
                    <div class="card-header" id="oq1">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button"
                                    data-toggle="collapse" data-target="#o1"
                                    aria-expanded="true" aria-controls="o1">
                                Randevuları nasıl onaylarım?
                            </button>
                        </h2>
                    </div>

                    <div id="o1" class="collapse show" aria-labelledby="oq1" data-parent="#ownerFaq">
                        <div class="card-body">
                            “Randevular” sekmesinde “Onay Bekleyen” listesinden işlem yapabilirsin.
                        </div>
                    </div>
                </div>

                <!-- Q2 -->
                <div class="card">
                    <div class="card-header" id="oq2">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button"
                                    data-toggle="collapse" data-target="#o2"
                                    aria-expanded="false" aria-controls="o2">
                                Çalışanım paneline giremiyor
                            </button>
                        </h2>
                    </div>

                    <div id="o2" class="collapse" aria-labelledby="oq2" data-parent="#ownerFaq">
                        <div class="card-body">
                            Çalışanın aktiflik durumunu kontrol et, doğru e-posta ile giriş yaptığından emin ol.
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a class="btn btn-outline-primary" href="/BusinessOwner/Support/Feedback">Hâlâ sorun var → Yaz</a>
            </div>
        </div>
    </div>
</div>
