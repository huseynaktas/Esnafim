@model Esnafim_1.WebUI.Areas.BusinessOwner.ViewModels.FakeLoginViewModel

@{
    ViewData["Title"] = "Index";
    Layout = null;
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center min-vh-100">
                <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>

                        <div class="col-lg-7">
                            <div class="p-5">

                                <div class="text-center mb-4">
                                    <a href="#" class="text-dark font-size-22 font-family-secondary">
                                        <i class="mdi mdi-alpha-x-circle"></i> <b>Esnafım</b>
                                    </a>
                                </div>

                                <h1 class="h5 mb-1">Hoşgeldin!</h1>
                                <p class="text-muted mb-4">Panele giriş yapmak için email adresini ve şifreni gir!</p>

                                @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                                {
                                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                                }

                                <form method="post">
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        <input asp-for="Email" class="form-control form-control-user"
                                               placeholder="Email Adresi" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input asp-for="Password" class="form-control form-control-user"
                                               placeholder="Şifre" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <button type="submit" class="btn btn-success btn-block waves-effect waves-light">
                                        Giriş Yap
                                    </button>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
