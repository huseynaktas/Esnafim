@model Esnafim_1.WebUI.Areas.BusinessOwner.ViewModels.FakeLoginViewModel

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Esnafım - İşletme Sahibi Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="MyraStudio" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

    <style>
        body {
            min-height: 100vh;
            background: url("https://images.unsplash.com/photo-1517248135467-4c7edcad34c4") center / cover no-repeat;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                inset: 0;
                background-color: rgba(0, 0, 0, 0.5); /* %50 saydamlık */
                z-index: 0;
            }

        .login-wrapper {
            position: relative;
            z-index: 1; /* kart overlay'in üstünde dursun */
        }

        .login-card {
            max-width: 420px; /* form eni */
            margin: auto;
        }

        /* Opsiyonel: cam hissi (istersen aç) */

        .login-card {
            background-color: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(6px);
        }
    </style>


</head>

<body>

    <div class="login-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="login-card w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col">
                                    <div class="p-5">

                                        <div class="text-center mb-4">
                                            <a href="#" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-alpha-e-box-outline"></i> <b>Esnafım</b>
                                            </a>
                                        </div>

                                        <h1 class="h5 mb-1">İşletme Sahibi Paneline Hoşgeldin!</h1>
                                        <p class="text-muted mb-4">
                                            Panele giriş yapmak için email adresini ve şifreni gir!
                                        </p>

                                        @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                                        {
                                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                                        }

                                        <form method="post">
                                            @Html.AntiForgeryToken()

                                            <div class="form-group">
                                                <input asp-for="Email"
                                                       class="form-control form-control-user"
                                                       placeholder="Email Adresi" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <input asp-for="Password"
                                                       type="password"
                                                       class="form-control form-control-user"
                                                       placeholder="Şifre" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>

                                            <button type="submit"
                                                    class="btn btn-success btn-block waves-effect waves-light">
                                                Giriş Yap
                                            </button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div> <!-- /login-card -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end page -->
    <!-- jQuery  -->
    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>

    <!-- App js -->
    <script src="~/Admin/vertical/assets/js/theme.js"></script>

</body>

</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}