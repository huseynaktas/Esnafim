@{
    ViewData["Title"] = "SSS";
    Layout = "~/Areas/BusinessEmployee/Views/BusinessEmployeeLayout/Index.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="mb-3">Sık Sorulan Sorular</h3>

            <div id="empFaq">
                <!-- Q1 -->
                <div class="card">
                    <div class="card-header" id="eq1">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button"
                                    data-toggle="collapse" data-target="#e1"
                                    aria-expanded="true" aria-controls="e1">
                                Randevu listem neden boş görünüyor?
                            </button>
                        </h2>
                    </div>

                    <div id="e1" class="collapse show" aria-labelledby="eq1" data-parent="#empFaq">
                        <div class="card-body">
                            İlgili tarih filtresini kontrol et. Ayrıca hesabının doğru işletmeye bağlı olduğundan emin ol.
                        </div>
                    </div>
                </div>

                <!-- Q2 -->
                <div class="card">
                    <div class="card-header" id="eq2">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button"
                                    data-toggle="collapse" data-target="#e2"
                                    aria-expanded="false" aria-controls="e2">
                                Şifremi unuttum
                            </button>
                        </h2>
                    </div>

                    <div id="e2" class="collapse" aria-labelledby="eq2" data-parent="#empFaq">
                        <div class="card-body">
                            İşletme sahibinden şifre sıfırlama / yeni şifre talep edebilirsin.
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a class="btn btn-outline-primary" href="/BusinessEmployee/Support/Feedback">Sorun devam ediyorsa yaz</a>
            </div>
        </div>
    </div>
</div>
