@model Esnafim_1.WebUI.Areas.BusinessEmployee.ViewModels.BusinessEmployeeLoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Xacton - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="MyraStudio" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <link href="~/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>

                                <div class="col-lg-7">
                                    <div class="p-5">

                                        <div class="text-center mb-4">
                                            <a href="#" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-alpha-x-circle"></i> <b>Esnafım</b>
                                            </a>
                                        </div>

                                        <h1 class="h5 mb-1">Hoşgeldin!</h1>
                                        <p class="text-muted mb-4">Panele giriş yapmak için email adresini ve şifreni gir!</p>

                                        <form method="post" asp-action="Login" asp-controller="BusinessEmployeeAuth" asp-area="BusinessEmployee">
                                            @Html.AntiForgeryToken()

                                            <div class="text-danger mb-2">
                                                @Html.ValidationSummary()
                                            </div>

                                            <div class="form-group">
                                                <input asp-for="Email" class="form-control form-control-user" placeholder="Email Adresi" />
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Şifre" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>

                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light">
                                                Giriş Yap
                                            </button>
                                        </form>

                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>
    <script src="~/Admin/vertical/assets/js/theme.js"></script>

</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
