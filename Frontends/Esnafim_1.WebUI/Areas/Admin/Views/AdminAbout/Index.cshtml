@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="row justify-content-center align-items-center">
    <div class="col-8">
        <div class="card text-center">
            @foreach (var item in Model)
            {
                <img class="card-img-top img-fluid" src="@item.imageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.title</h5>
                    <p class="card-text">
                        @item.description
                    </p>
                    <a href="/Admin/AdminAbout/UpdateAbout/@item.aboutId" class="btn btn-primary waves-effect waves-light">Güncelle</a>
                </div>

            }
        </div>
    </div>
</div>