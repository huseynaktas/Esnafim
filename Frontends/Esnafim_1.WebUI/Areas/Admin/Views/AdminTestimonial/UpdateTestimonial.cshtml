@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminPluginsCssLinkPartial.cshtml")

<div class="row justify-content-center align-items-center">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Referanslar Güncelleme Sayfası</h4>

                <form method="post">
                    <input type="hidden" asp-for="testimonialId" />


                    <div class="form-group">
                        <label for="exampleInputName">İsim</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputName" asp-for="name" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputTitle">Başlık</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputTitle" asp-for="title" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputComment">İçerik</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputComment" asp-for="comment" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputImageUrl">Resim Yolu</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputImageUrl" asp-for="imageUrl" />
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div>
</div>