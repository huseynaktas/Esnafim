@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminPluginsCssLinkPartial.cshtml")

<div class="row justify-content-center align-items-center">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Servis Güncelleme Sayfası</h4>

                <form method="post">
                    <input type="hidden" asp-for="socialMediaId" />

                    <div class="form-group">
                        <label for="exampleInputName">İsim</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputName" asp-for="name" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUrl">Url</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputUrl" asp-for="url" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputIcon">İkon</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputIcon" asp-for="icon" />
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div>
</div>