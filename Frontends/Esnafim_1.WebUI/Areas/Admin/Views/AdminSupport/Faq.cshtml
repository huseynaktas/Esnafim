@{
    ViewData["Title"] = "Faq";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">Sık Sorulan Sorular</h3>
        <a class="btn btn-outline-secondary btn-sm" href="/Admin/Support/Help">Yardım & Destek</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div id="adminFaq">

                <!-- Q1 -->
                <div class="card">
                    <div class="card-header" id="q1">
                        <h2 class="mb-0">
                            <button class="btn btn-link" type="button"
                                    data-toggle="collapse" data-target="#a1"
                                    aria-expanded="true" aria-controls="a1">
                                Kullanıcı giriş yapamıyor, ne yapmalıyım?
                            </button>
                        </h2>
                    </div>

                    <div id="a1" class="collapse show" aria-labelledby="q1" data-parent="#adminFaq">
                        <div class="card-body">
                            Kullanıcının aktiflik durumunu ve rolünü kontrol et. Şifre sıfırlama gerekiyorsa yönlendir.
                        </div>
                    </div>
                </div>

                <!-- Q2 -->
                <div class="card">
                    <div class="card-header" id="q2">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button"
                                    data-toggle="collapse" data-target="#a2"
                                    aria-expanded="false" aria-controls="a2">
                                İşletme kaydı görünmüyor
                            </button>
                        </h2>
                    </div>

                    <div id="a2" class="collapse" aria-labelledby="q2" data-parent="#adminFaq">
                        <div class="card-body">
                            Filtreleri (aktif/pasif) ve tarih aralığını kontrol et. Gerekirse listeleme endpoint’ini doğrula.
                        </div>
                    </div>
                </div>

                <!-- Q3 -->
                <div class="card">
                    <div class="card-header" id="q3">
                        <h2 class="mb-0">
                            <button class="btn btn-link collapsed" type="button"
                                    data-toggle="collapse" data-target="#a3"
                                    aria-expanded="false" aria-controls="a3">
                                Performans sorunu yaşıyorum
                            </button>
                        </h2>
                    </div>

                    <div id="a3" class="collapse" aria-labelledby="q3" data-parent="#adminFaq">
                        <div class="card-body">
                            Önce log seviyesini ve istek yoğunluğunu kontrol et. Büyük listelemelerde sayfalama kullan.
                        </div>
                    </div>
                </div>

            </div>

            <div class="mt-3">
                <a href="/Admin/Support/Feedback" class="btn btn-primary">Sorunun yoksa öneri bırak</a>
            </div>
        </div>
    </div>
</div>
