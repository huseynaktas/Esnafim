@model UpdateUserDto

@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminPluginsCssLinkPartial.cshtml")

<div class="row justify-content-center align-items-center">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Kullanıcı Güncelleme Sayfası</h4>

                <form method="post">
                    <input type="hidden" asp-for="userId" />


                    <div class="form-group">
                        <label for="exampleInputName">İsim</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputName" asp-for="name" readonly=""/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputTel">Telefon</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputTel" asp-for="phone" readonly=""/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputCity">İl</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputCity" asp-for="city" readonly=""/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputDitrict">İlçe</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputDitrict" asp-for="district" readonly=""/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputNeigh">Mahalle</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputNeigh" asp-for="neighborhood" readonly=""/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputAddress">Adres</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputAddress" asp-for="address" readonly=""/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail">Email</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputEmail" asp-for="email" readonly=""/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputIsActive">Aktif Mi?</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputIsActive" asp-for="isActive" />
                    </div>

                    <div class="form-group">
                        <input type="hidden" maxlength="100" class="form-control" id="exampleInputIsActive" asp-for="password" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputRegDate">Kayıt Tarihi</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputRegDate" asp-for="registrationDate" readonly="" />
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div>
</div>