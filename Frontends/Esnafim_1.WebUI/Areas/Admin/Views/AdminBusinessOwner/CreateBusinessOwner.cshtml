@model CreateBusinessOwnerDto

@{
    ViewData["Title"] = "CreateBusinessOwner";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminPluginsCssLinkPartial.cshtml")

<div class="row justify-content-center align-items-center">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">İşletme Sahibi Ekleme Sayfası</h4>

                <form method="post">

                    <div class="form-group">
                        <label for="exampleInputName">İşletme Sahibi</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputName" asp-for="name"  />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputTel">Telefon</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputTel" asp-for="phoneNumber"  />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputCity">Şehir</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputCity" asp-for="city"  />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail">Email</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputEmail" asp-for="email" />
                    </div>


                    <div class="form-group">
                        <label for="exampleInputRegDate">Kayıt Tarihi</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputRegDate" asp-for="registrationDate"  value="@DateTime.Now.ToShortDateString()"/>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword">Şifre</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputPassword" asp-for="password" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputIsActive">Aktif Mi?</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputIsActive" asp-for="isActive" value="true"/>
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Ekle</button>
                </form>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div>
</div>