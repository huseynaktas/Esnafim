@model CreateBusinessCategoryDto

@{
    ViewData["Title"] = "CreateBusinessCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@await Html.PartialAsync("/Areas/Admin/Views/AdminLayout/AdminPluginsCssLinkPartial.cshtml")

<div class="row justify-content-center align-items-center">
    <div class="col-xl-6">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">İşletme Kategorisi Ekleme Sayfası</h4>

                <form method="post">

                    <div class="form-group">
                        <label for="exampleInputName">İsim</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputName" asp-for="name" />
                    </div>

                    <div class="form-group">
                        <label for="exampleInputIsActive">Aktif Mi?</label>
                        <input type="text" maxlength="100" class="form-control" id="exampleInputIsActive" asp-for="isActive" value="True" />
                    </div>

                    <button type="submit" class="btn btn-primary waves-effect waves-light">Ekle</button>
                </form>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div>
</div>